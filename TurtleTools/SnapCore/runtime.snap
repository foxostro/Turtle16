let serialOut = (0x0001 as u16) bitcastAs *u8

public func puts(s: []const u8) {
    for c in s {
        serialOut.pointee = c
    }
}

let kPanicPrefix = "PANIC: "
let kPanicSuffix = "\n"

public func panic(message: []const u8) {
    puts(kPanicPrefix)
    puts(message)
    puts(kPanicSuffix)
    hlt()
}
